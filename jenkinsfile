pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                
                echo "Compile and package the code."
                echo "Tool: Maven"
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                
                echo "Run unit tests and integration tests."
                echo "JUnit for unit tests, Selenium for integration tests"
                
            }
        }
        stage('Code Analysis') {
            steps {
                
                echo "Integrate a code analysis tool to ensure code quality."
                echo "Jenkins with SonarQube plugin for code analysis"
            }
        }
        stage('Security Scan') {
            steps {
                echo "Perform a security scan to identify vulnerabilities."
                echo "Tool: OWASP ZAP for security scanning"
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo "Deploy the application to a staging server."
                echo "Tool: AWS CLI for deployment to AWS EC2 instance"
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo "Run integration tests on the staging environment."
                echo "Tool: Selenium for integration tests"
            }
        }
        stae('Deploy to Production') {
            steps {
               echo "Deploy the application to a production server."
                echo "Tool: AWS CLI for deployment to AWS EC2 instance"
            }
        }
    }
   
    post {
        success {
                mail to: "vivekolladapu5@gmail.com",
                subject: "Build Success",
                body: "The build completed successfully."
        }
        failure {
                mail to: "vivekolladapu5@gmail.com",
                subject: "Build Failed",
                body: "The build is not completed."
        }
    }

    
}
